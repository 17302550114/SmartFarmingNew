<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.FindFragment">


    <FrameLayout
        android:id="@+id/tip_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:background="#CABCBC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/my_shape"
            android:text="服务产品"
            android:textColor="@android:color/holo_red_light" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/function_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_text1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/my_shape"
                android:src="@drawable/farm" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一周农事" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/my_shape"
                android:src="@drawable/pre" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="农用预告" />
        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/tip_text2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/function_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:background="#CABCBC" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/my_shape"
            android:text="农业互动"
            android:textColor="@android:color/holo_red_light" />

    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tip_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/my_shape"
                android:src="@drawable/commit" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息上报" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/my_shape"
                android:src="@drawable/montior" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小区监控" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/my_shape"
                android:src="@drawable/farm_setting" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小区设置" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>